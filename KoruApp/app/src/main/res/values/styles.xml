<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">@dimen/dimen_x15_30</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="ButtonMain.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@drawable/text_color</item>
    </style>

    <style name="SpinnerStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_marginStart">@dimen/dimen_x1_8_negative</item>
    </style>
</resources>
