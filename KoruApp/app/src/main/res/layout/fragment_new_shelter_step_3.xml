<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="@dimen/dimen_x4_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_x4_5"
            android:text="@string/primary_contact_tv"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_primary_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_x4_5"
            android:layout_marginEnd="@dimen/dimen_x6_5"
            android:layout_marginStart="@dimen/dimen_x6_5"
            android:background="@drawable/button_primary_background"
            android:text="@string/add_primary_contact"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:cardBackgroundColor="@color/indigo_light"
            card_view:cardCornerRadius="@dimen/dimen_x1_5"
            card_view:cardElevation="@dimen/dimen_x1_5"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_x3_5"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_primary_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:id="@+id/tv_primary_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:id="@+id/tv_primary_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_17sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_remove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/ic_clear_white_24dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_x2_5"
            android:text="@string/secondary_contact_tv"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_x4_5"
            android:orientation="vertical"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_secondary_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_x4_5"
            android:layout_marginEnd="@dimen/dimen_x6_5"
            android:layout_marginStart="@dimen/dimen_x6_5"
            android:layout_marginTop="@dimen/dimen_x4_5"
            android:background="@drawable/button_secondary_background"
            android:text="@string/add_secondary_contact"
            android:textColor="@color/gray_text" />

    </LinearLayout>

</ScrollView>

